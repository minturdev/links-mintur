---
const { href, title, icon } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="w-xs flex items-center gap-2 text-primary px-4 py-3 border-1 border-primary bg-neutral-100 backdrop-blur-sm font-bold
   rounded-lg shadow-2xs hover:text-primary-dark hover:bg-neutral-200 hover:border-primary-dark hover:scale-105 transition duration-300 ease-in-out"
>
  <svg class="w-6 h-6" fill="currentColor">
    <use xlink:href=`./icons.svg#${icon}` />
  </svg>
  <span>{title}</span>
</a>
